# Server
PORT=3000
HOST=0.0.0.0

# Data Mode: Set to 'true' to use mock JSON data, 'false' to use PostgreSQL
USE_MOCK_DATA=true

# Skip Authentication (for testing without Cognito) - set to 'false' in production
SKIP_AUTH=true

# PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/altius_vnoc
DB_HOST=localhost
DB_PORT=5432
DB_NAME=altius_vnoc
DB_USER=postgres
DB_PASSWORD=your_password

# AWS Cognito
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_REGION=ap-south-1

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
